package src.main.java.com.qa.java.Project_1;

import java.awt.*;
import java.awt.event.ActionEvent;

public class FormGUI {

	static Frame frame1 = new Frame("Frame 1");

	public static void create() {

		Button b1 = new Button("1N");

		EventClass event = new EventClass();
		TextField textField = new TextField();
		textField.setText("Asdf");
		b1.addActionListener(event);

		b1.setBackground(Color.ORANGE);
		Button b2 = new Button("1E");
		Button b3 = new Button("1S");
		Button b4 = new Button("1W");
		frame1.add(b1, BorderLayout.NORTH);
		frame1.add(b2, BorderLayout.EAST);
		frame1.add(b3, BorderLayout.SOUTH);
		frame1.add(b4, BorderLayout.WEST);
		frame1.setSize(400, 400);
		frame1.setVisible(true);

		/*
		 * Frame frame2 = new Frame("Frame 2"); Button b21= new Button("2N"); Button
		 * b22= new Button("2E"); Button b23= new Button("2S"); Button b24= new
		 * Button("2W"); frame2.add(b21, BorderLayout.NORTH); frame2.add(b22,
		 * BorderLayout.EAST); frame2.add(b23, BorderLayout.SOUTH); frame2.add(b24,
		 * BorderLayout.WEST); frame2.add(frame1, BorderLayout.CENTER);
		 * frame2.setSize(800,800); frame2.setVisible(true);
		 * 
		 */

	}

	public Frame getFrame() {
		return frame1
	}

}
